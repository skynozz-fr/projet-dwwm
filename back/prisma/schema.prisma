generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum NewsCategory {
  TRANSFER
  MATCH
  OTHER
}

enum MatchCompetition {
  FRIENDLY
  LEAGUE
  CUP
  TOURNAMENT
  OTHER
}

enum MatchStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  POSTPONED
  CANCELLED
}

model User {
  id              String   @id @default(uuid())
  firstname       String
  lastname        String
  email           String   @unique
  password        String
  role            Role     @default(USER)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt
  authored_news   News[]   @relation("NewsAuthor")
  updated_news    News[]   @relation("NewsUpdater")
  authored_matches Match[] @relation("MatchAuthor")
  updated_matches  Match[] @relation("MatchUpdater")
}

model News {
  id            String        @id @default(uuid())
  title         String
  excerpt       String
  content       String         @db.Text
  author_id     String?
  author        User?          @relation("NewsAuthor", fields: [author_id], references: [id], onDelete: SetNull)
  updated_by_id String?
  updated_by    User?          @relation("NewsUpdater", fields: [updated_by_id], references: [id], onDelete: SetNull)
  category      NewsCategory   @default(OTHER)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
}

model Match {
  id            String         @id @default(uuid())
  home_team     String
  away_team     String
  is_home       Boolean        @default(true)
  datetime      DateTime
  venue         String
  location      String
  competition   MatchCompetition @default(LEAGUE)
  status        MatchStatus @default(SCHEDULED)
  home_score    Int?
  away_score    Int?
  description   String?        @db.Text
  referee       String?
  weather       String?
  author_id     String?
  author        User?          @relation("MatchAuthor", fields: [author_id], references: [id], onDelete: SetNull)
  updated_by_id String?
  updated_by    User?          @relation("MatchUpdater", fields: [updated_by_id], references: [id], onDelete: SetNull)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
}