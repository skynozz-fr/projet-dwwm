generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum NewsCategory {
  TRANSFER
  MATCH
  OTHER
}

enum MatchCompetition {
  FRIENDLY
  LEAGUE
  CUP
  TOURNAMENT
  OTHER
}

enum MatchStatus {
  SCHEDULED
  ONGOING
  COMPLETED
  POSTPONED
  CANCELLED
}

model User {
  id         Int      @id @default(autoincrement())
  firstname  String
  lastname   String
  email      String   @unique
  password   String
  role       Role     @default(USER)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  news       News[]   @relation("UserNews")
}

model News {
  id            Int           @id @default(autoincrement())
  title         String
  excerpt       String
  content       String         @db.Text
  author_id     Int?
  author        User?          @relation("UserNews", fields: [author_id], references: [id], onDelete: SetNull)
  category      NewsCategory   @default(OTHER)
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
}

model Match {
  id            Int            @id @default(autoincrement())
  home_team     String
  away_team     String
  is_home       Boolean        @default(true)
  date          DateTime
  time          String
  venue         String
  location      String
  competition   MatchCompetition @default(LEAGUE)
  status        MatchStatus @default(SCHEDULED)
  home_score    Int?
  away_score    Int?
  description   String?        @db.Text
  referee       String?
  weather       String?
  created_at    DateTime       @default(now())
  updated_at    DateTime       @updatedAt
}